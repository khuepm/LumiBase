# Database Configuration
# PostgreSQL database credentials for local Docker setup

# Database username for PostgreSQL
DB_USER=your_db_username_here

# Database password for PostgreSQL (use a strong password)
DB_PASSWORD=your_secure_password_here

# Database name for the application
DB_NAME=your_database_name_here

# Directus Configuration
# Random keys for Directus security (minimum 32 characters)
# Generate with: openssl rand -base64 32

# Directus encryption key (minimum 32 characters)
DIRECTUS_KEY=your_random_key_32_chars_min

# Directus secret for JWT signing (minimum 32 characters)
DIRECTUS_SECRET=your_random_secret_32_chars_min

# Directus admin email for initial setup
DIRECTUS_ADMIN_EMAIL=admin@example.com

# Directus admin password for initial setup
DIRECTUS_ADMIN_PASSWORD=admin_password_here

# Firebase Configuration
# Get these from Firebase Console -> Project Settings -> Service Accounts
# Download the service account JSON file and extract these values

# Firebase project ID from your Firebase project
FIREBASE_PROJECT_ID=your-project-id

# Firebase service account private key (keep the quotes and \n escape sequences)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase service account client email address
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Firebase Web API Key (for client-side)
# Get from Firebase Console -> Project Settings -> General

# Firebase Web API key for client-side authentication
FIREBASE_WEB_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Supabase Configuration
# Get these from Supabase Dashboard -> Settings -> API

# Supabase project URL
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Supabase anonymous key for client-side access
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key for server-side operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase JWT Secret
# This is used to sign JWT tokens for Supabase authentication
# Must be at least 32 characters long
# Generate with: openssl rand -base64 32

# Supabase JWT secret for token signing
SUPABASE_JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
