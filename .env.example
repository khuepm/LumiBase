# Firebase Configuration
# Get these from Firebase Console -> Project Settings -> General
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Service Account (For Backend/Admin SDK)
# Be very careful with this!
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Supabase Configuration
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_DB_PASSWORD=

# Supabase Database Connection (For Directus)
# Settings -> Database -> Connection string -> URI
# postgres://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres
SUPABASE_DB_CONNECTION_STRING=postgres://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# Directus Configuration
DIRECTUS_URL=http://localhost:8055
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=root
DIRECTUS_KEY=random_string_for_security_key
DIRECTUS_SECRET=random_string_for_session_secret

# JWT Secrets
# This should match the JWT secret used by Firebase to sign tokens
# Used by Supabase to verify Firebase tokens
FIREBASE_JWT_SECRET=your_firebase_jwt_secret_here
